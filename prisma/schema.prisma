// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  relationMode = "prisma"
  url          = env("DATABASE_URL")
}

model DevJobsUser {
  id        Int      @id @default(autoincrement())
  phone     String?  @unique
  email     String   @unique
  password  String
  name      String
  company   String   @unique
  isCEO     Boolean
  avator    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CompanyInfo {
  id        Int      @id @default(autoincrement())
  phone     String?  @unique
  email     String?  @unique
  name      String
  avator    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
