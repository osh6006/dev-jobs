// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model DevJobsUser {
  id          Int           @id @default(autoincrement())
  phone       String        @unique
  email       String        @unique
  password    String
  name        String
  company     String
  isCEO       Boolean
  avator      String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  CompanyInfo CompanyInfo[]
  Resume      Resume[]
  UserApply   Apply[]       @relation("user_apply")
  CEOApply    Apply[]       @relation("ceo_apply")
  Apply       Apply[]
}

model CompanyInfo {
  id            Int         @id @default(autoincrement())
  phone         String      @unique
  email         String      @unique
  name          String
  logo          String?
  logoBgColor   String
  location      String
  position      String
  contract      String
  website       String
  description   String      @db.LongText
  roles         Json?
  requirements  Json?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  user          DevJobsUser @relation(fields: [devJobsUserId], references: [id], onDelete: Cascade)
  devJobsUserId Int

  @@index([devJobsUserId])
}

model Resume {
  id               Int         @id @default(autoincrement())
  title            String
  name             String
  email            String
  phone            String
  introduction     String      @db.LongText
  school           String
  ability          String
  hope             String
  isRepresentative Boolean     @unique
  career           Json?
  certificate      Json?
  skill            Json?
  link             Json?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  user             DevJobsUser @relation(fields: [devJobsUserId], references: [id], onDelete: Cascade)
  devJobsUserId    Int

  @@index([devJobsUserId])
}

model Apply {
  id        Int         @id @default(autoincrement())
  user      DevJobsUser @relation(name: "user_apply", fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  ceo       DevJobsUser @relation(name: "ceo_apply", fields: [ceoId], references: [id], onDelete: Cascade)
  ceoId     Int
  resume    DevJobsUser @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  resumeId  Int
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([ceoId])
  @@index([userId])
  @@index([resumeId])
}
